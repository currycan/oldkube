apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: traefik
  namespace: traefik
  labels:
    app.kubernetes.io/name: traefik
    app.kubernetes.io/part-of: traefik
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: traefik-ingress-sa
  minReplicas: 1
  maxReplicas: 10
  targetCPUUtilizationPercentage: 60
